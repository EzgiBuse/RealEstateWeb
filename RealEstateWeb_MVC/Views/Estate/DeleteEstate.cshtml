@model RealEstateWeb_MVC.Models.Dto.EstateDto

<form asp-action="DeleteEstate">
    <br />
    <div class="container border p-4">
        <h1 class="text-primary">Delete Estate</h1>
        <hr />
        <input hidden asp-for="ID" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" disabled class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
                
            </div>

            <div class="col-2">
                <label asp-for="Rate" disabled class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rate" disabled class="form-control" />
               
            </div>

            <div class="col-2">
                <label asp-for="Details" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" disabled class="form-control" rows="5"></textarea>
                
            </div>

            <div class="col-2">
                <label asp-for="ImageURL" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageURL" disabled class="form-control" />
               
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" disabled class="form-control" />
                
            </div>

            <div class="col-2">
                <label asp-for="Msq" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Msq" class="form-control" />
               
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexEstate" class="btn-primary btn form-control">Back to List</a>

            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>


        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
