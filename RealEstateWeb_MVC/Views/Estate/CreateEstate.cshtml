@model RealEstateWeb_MVC.Models.Dto.EstateCreateDto

<form asp-action="CreateEstate">
    <br /> 
    <div class="container border p-4">
        <h1 class="text-primary">Create Estate</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Rate" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Details" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ImageURL" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" class="form-control" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Msq" class="control-label-p3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Msq" class="form-control" />
                <span asp-validation-for="Msq" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexEstate" class="btn-primary btn form-control">Back to List</a>
                
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
            

        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
