@model IEnumerable<RealEstateWeb_MVC.Models.Dto.EstateDto>
<br />
<div class="container p-4 border">
    <div class="1row pb-2">
        <div class="col">
            <h1 class="text-primary">Estate_List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Estate" asp-action="CreateEstate" class="btn btn-outline-primary"><i class="bi bi-plus-circle-fill"></i>Create New Estate</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Rate).ToString("c"))</td>
                    <td>
                        <a asp-controller="Estate" asp-action="UpdateEstate" asp-route-id="@item.ID" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Estate" asp-action="DeleteEstate" asp-route-id="@item.ID" class="btn btn-danger"><i class="bi bi-trash"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
