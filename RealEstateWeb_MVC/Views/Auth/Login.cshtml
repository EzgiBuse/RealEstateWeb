@model RealEstateWeb_MVC.Models.Dto.LoginRequestDto

<style>
    body {
        background-image: url('/images/home/slide1.jpg'); /* Adjust the path to your image file */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .container {
        background-color: white; /* Set the background color to white */
        padding: 20px; /* Add some padding for spacing */
        border-radius: 10px; /* Optional: Add rounded corners for a nicer look */
        max-width: 500px; /* Limit the maximum width of the container */
        margin: 0 auto; /* Center the container horizontally */
    }
</style>
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username..." />
            </div>
            
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" class="form-control" placeholder="Password..." />

            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Login</button>

            </div>
        </div>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
